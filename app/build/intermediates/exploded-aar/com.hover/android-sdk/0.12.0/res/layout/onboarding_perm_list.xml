<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button android:id="@+id/phone_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:theme="@style/HoverOnboardingButton"
            android:textAlignment="viewStart"
            android:text="@string/hsdk_perm_read_phone"
            android:enabled="false"
            android:onClick="requestBasicPerms">
    </Button>

    <Button android:id="@+id/sms_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:theme="@style/HoverOnboardingButton"
            android:textAlignment="viewStart"
            android:text="@string/hsdk_perm_read_sms"
            android:enabled="true"
            android:onClick="requestBasicPerms"/>

    <com.hover.sdk.onboarding.ComplexButton android:id="@+id/accessibility_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    </com.hover.sdk.onboarding.ComplexButton>

    <com.hover.sdk.onboarding.ComplexButton android:id="@+id/overlay_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    </com.hover.sdk.onboarding.ComplexButton>

    <!--<include android:id="@+id/accessibility_btn"-->
             <!--layout="@layout/onboarding_complex_button" />-->

    <!--<include android:id="@+id/overlay_btn"-->
             <!--layout="@layout/onboarding_complex_button" />-->

</LinearLayout>
