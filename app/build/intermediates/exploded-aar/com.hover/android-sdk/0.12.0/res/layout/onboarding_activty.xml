<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/DialogTheme">

    <android.support.v7.widget.Toolbar android:id="@+id/integration_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/hsdk_HoverOrange">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/hsdk_white"
            android:textSize="16sp"
            android:text="@string/hsdk_onboarding_header"/>

    </android.support.v7.widget.Toolbar>

    <com.hover.sdk.onboarding.StepperLayout
        android:id="@+id/vertical_stepper_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>