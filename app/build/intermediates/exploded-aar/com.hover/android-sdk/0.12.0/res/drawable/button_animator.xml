<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:state_enabled="true">
            <objectAnimator android:propertyName="translationZ"
                            android:duration="5"
                            android:valueTo="4"
                            android:valueType="floatType"/>
            <objectAnimator android:propertyName="elevation"
                            android:duration="0"
                            android:valueTo="2"
                            android:valueType="floatType"/>
            <objectAnimator android:propertyName="background"
                            android:duration="0"
                            android:valueTo="@color/hsdk_step_subtext" />
            <objectAnimator android:propertyName="textColor"
                            android:duration="0"
                            android:valueTo="@color/hsdk_white" />
    </item>
    <!-- base state -->
    <item android:state_enabled="true">
            <objectAnimator android:propertyName="translationZ"
                            android:duration="5"
                            android:valueTo="0"
                            android:startDelay="1"
                            android:valueType="floatType"/>
            <objectAnimator android:propertyName="elevation"
                            android:duration="0"
                            android:valueTo="0"
                            android:valueType="floatType" />
            <objectAnimator android:propertyName="background"
                            android:duration="0"
                            android:valueTo="@color/hsdk_HoverOrange" />
            <objectAnimator android:propertyName="textColor"
                            android:duration="0"
                            android:valueTo="@color/hsdk_white" />
    </item>
    <item android:state_enabled="false">
            <objectAnimator android:propertyName="translationZ"
                            android:duration="0"
                            android:valueTo="2"
                            android:valueType="floatType"/>
            <objectAnimator android:propertyName="elevation"
                            android:duration="0"
                            android:valueTo="2"
                            android:valueType="floatType"/>
            <objectAnimator android:propertyName="colorButtonNormal"
                            android:duration="0"
                            android:valueTo="@color/hsdk_HoverOrange" />
            <objectAnimator android:propertyName="textColor"
                            android:duration="0"
                            android:valueTo="@color/hsdk_HoverBlue" />
    </item>
</selector>